{
  "name": "node-red-contrib-helpers",
  "version": "1.0.8",
  "description": "Ensemble d'outils utilitaires pour Node-RED",
  "main": "dist/helpers-set.js",
  "keywords": [
    "node-red",
    "helpers",
    "utilities",
    "tools"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/benoitadam/node-red-contrib-helpers.git"
  },
  "homepage": "https://github.com/benoitadam/node-red-contrib-helpers",
  "bugs": {
    "url": "https://github.com/benoitadam/node-red-contrib-helpers/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "npm-run-all --parallel lint:watch build:watch",
    "lint": "tsc --noEmit",
    "lint:watch": "tsc --noEmit --watch",
    "build:watch": "node esbuild.config.js --watch",
    "clean": "rm -rf dist"
  },
  "node-red": {
    "version": ">=2.0.0",
    "examples": "examples",
    "nodes": {
      "helpers-set": "dist/helpers-set.js",
      "helpers-shell": "dist/helpers-shell.js"
    }
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/node-red": "^1.3.5",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5"
  }
}
